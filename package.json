{
	"private": true,
	"scripts": {
		"test": "lerna run test",
		"new-version": "lerna version --conventional-commits"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"{packages,tests,scripts}/**/*.{js,json,css,md}": [
			"prettier --write",
			"git add"
		]
	},
	"devDependencies": {
		"husky": "^2.3.0",
		"lerna": "^3.14.1",
		"lint-staged": "^8.1.7",
		"prettier": "^1.17.1"
	}
}
